<Window x:Class="NewSQLMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewSQLMonitor"
        mc:Ignorable="d"
        Title="SQLMonitor" Height="800" Width="1400" >

    <Grid Background="#1E1E1E" >

        <!--MainFrame-->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />

        <!--PageSelection-->
        <ComboBox VerticalAlignment="Top" HorizontalAlignment="Right" Width="Auto" Height="Auto" FontSize="15" Margin="10, 10, 10, 10" SelectionChanged="GUI_navigationComboBox_SelectionChanged" Name="GUI_navigationComboBox" >
            <ComboBoxItem Content="DB-CONTROL" />
            <ComboBoxItem Content="SETTINGS" />
        </ComboBox>

        <!--OutPutTextBlockGrid-->
        <Grid Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Background="#3C3C3C">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--OutPutTextBlocks-->
            <TextBlock Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="Auto" Name="GUI_outPutTextBlock" FontSize="17.5" />
            <TextBlock Grid.Column="1" HorizontalAlignment="Center" Height="Auto" Name="GUI_outPutRightTextBlock" FontSize="17.5" />
        </Grid>
    </Grid>
</Window>