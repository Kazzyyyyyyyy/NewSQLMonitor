<Page x:Class="NewSQLMonitor.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <!--MainGrid-->
    <Grid Width="auto" Height="auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >

        <!--GridDefinitions-->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.107*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Borders-->
        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="0" VerticalAlignment="Top" Margin="0,5,0,0" />
        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="0" HorizontalAlignment="Left" Margin="0,5,0,0" />
        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="0" HorizontalAlignment="Right" Margin="0,5,0,0" />

        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="1" VerticalAlignment="Bottom" Margin="0,0,0,20" />
        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="1" HorizontalAlignment="Left" Margin="0,0,0,20" />
        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,0,20" />


        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="2" VerticalAlignment="Top" Margin="0,5,0,0" />
        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="2" HorizontalAlignment="Left" Margin="0,5,0,0" />
        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="2" HorizontalAlignment="Right" Margin="0,5,0,0" />

        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="3" VerticalAlignment="Bottom" Margin="0,0,0,150" />
        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="3" HorizontalAlignment="Left" Margin="0,0,0,150" />
        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="3" HorizontalAlignment="Right" Margin="0,0,0,150"/>

        <!--FilterAndFunctions-->
        <TextBlock Text="Filter and Functions" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" Margin="10" />

        <!--AutoUpdate-->
        <TextBlock FontSize="20" Grid.Row="1" Text="AutoUpdate:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" />
        <ComboBox Height="23" Grid.Row="1" SelectionChanged="GUI_SelectionChanged" Name="GUI_autoUpdateComboBox" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,13,10,0" Width="85">
            <ComboBoxItem Content="True" />
            <ComboBoxItem Content="False" />
        </ComboBox>

        <TextBlock Text="AutoUpdateInterval:" FontSize="20" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" />
        <TextBox Grid.Row="1" TextChanged="GUI_TextChanged" MinWidth="25" MaxWidth="100" HorizontalContentAlignment="Center" Name="GUI_autoUpdateIntervalTextBox" Height="25" FontSize="17.5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,43,70,0" />
        <Button Grid.Row="1" VerticalAlignment="Top" Name="GUI_autoUpdateIntervalMinusButton" Click="GUI_autoUpdateIntervalButtons_Click" HorizontalAlignment="Right" Content="-" Margin="0,43,40,0" Height="25" Width="25" />
        <Button Grid.Row="1" VerticalAlignment="Top" Name="GUI_autoUpdateIntervalPlusButton" Click="GUI_autoUpdateIntervalButtons_Click" HorizontalAlignment="Right" Content="+" Margin="0,43,10,0" Height="25" Width="25" />

        <!--ShowPrimaryKey-->
        <TextBlock Text="ShowPrimaryKey:" FontSize="20" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10, 70,0,0" />
        <ComboBox Height="23" Grid.Row="1" VerticalAlignment="Top" SelectionChanged="GUI_SelectionChanged" Name="GUI_showIDPrimaryKey" FontSize="15" HorizontalAlignment="Right" Margin="0,73, 10,0" Width="85"  >
            <ComboBoxItem Content="True" />
            <ComboBoxItem Content="False" />
        </ComboBox>

        <!--LoadOnlyStringRows-->
        <TextBlock Text="LoadOnlyStringRows:" FontSize="20" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10, 100,0,0" />
        <ComboBox Height="23" SelectionChanged="GUI_SelectionChanged" Name="GUI_loadOnlyStringRowsComboBox" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,103,10,0" Grid.Row="1" Width="85"  >
            <ComboBoxItem Content="True" />
            <ComboBoxItem Content="False" />
        </ComboBox>

        <!--SpaceRowsWithASCII-->
        <TextBlock Text="SpaceRowsWithASCII:" FontSize="20" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10, 130,0,0" />
        <TextBox FontSize="15" Name="GUI_spaceRowsWithASCII" HorizontalContentAlignment="Center" TextChanged="GUI_TextChanged" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,134,10,0" MinWidth="85" MaxWidth="500" />


        <!--FileManagement-->
        <TextBlock Grid.Row="2" Text="File Management" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" Margin="10" />

        <!--UndoFiles-->
        <TextBlock Text="CreateAndSaveUndoFiles" FontSize="20" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Top" Margin="10,40,0,0" />
        <ComboBox Height="23" SelectionChanged="GUI_SelectionChanged" Grid.Row="3" Name="GUI_createAndSaveUndoFiles" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,43,10,0" Width="85" >
            <ComboBoxItem Content="True" />
            <ComboBoxItem Content="False" />
        </ComboBox>

        <!--LoadLastUsedDB-->
        <TextBlock Grid.Row="3" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Text="LoadLastUsedDB:"/>
        <ComboBox Height="23" Grid.Row="3" SelectionChanged="GUI_SelectionChanged" Name="GUI_loadLastDBFilePath" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,13,10,0" Width="85" >
            <ComboBoxItem Content="True" />
            <ComboBoxItem Content="False" />
        </ComboBox>

        <!--ProgrammLogFilePath-->
        <TextBlock Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Left" Text="ProgrammLogFile:" FontSize="20" Margin="10,70,0,0" />
        <TextBlock FontSize="17.5"  Margin="0,73,10,0" MinWidth="85" MaxWidth="1250" Grid.Row="3" TextAlignment="Center" Name="GUI_programmLogFilePathTextBox" VerticalAlignment="Top" HorizontalAlignment="Right" />

        <Button Content="ChangeLogFile(.txt)" Width="155" Grid.Row="3" HorizontalContentAlignment="Center" Height="25" FontSize="17.5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0" Click="GUI_changeFilePath_Click" />

        <!--(DB)File-->
        <TextBlock FontSize="20" Grid.Row="3" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Text="(DB)File:" Margin="10,130" />

        <TextBlock MaxWidth="1250" MinWidth="85" TextAlignment="Center" Name="GUI_dbFilePathTextBox" Height="25" FontSize="17.5" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Row="3" Margin="0,133,10,0" />

        <ListView FontSize="20"  Grid.Row="3" x:Name="GUI_fileInfoListView" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0, 163, 10, 0" />

        <Button Content="ChangeDB(.db)" Name="GUI_changeDBFilePath" Width="125" Grid.Row="3" HorizontalContentAlignment="Center" Height="25" FontSize="17.5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,160,0,0" Click="GUI_changeFilePath_Click" />
        <Button Content="ReloadDB" Width="125" Grid.Row="3" HorizontalContentAlignment="Center" Height="25" FontSize="17.5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,190,0,0" Click="GUI_ReloadDB_Button_Click" />
        <Button Content="ReloadFileInfo" Width="125" HorizontalContentAlignment="Center" Grid.Row="3" Height="25" FontSize="17.5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,220,0,0" Click="GUI_LoadFileInfo_Button_Click" />

        
        <!--Other-->
        <Button Content="OpenAppDataFolder" Width="170" HorizontalContentAlignment="Center" Grid.Row="3" Height="25" FontSize="17.5" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,160" Click="GUI_openLocalAppDataFolder_Button_Click"/>

    </Grid>
</Page>